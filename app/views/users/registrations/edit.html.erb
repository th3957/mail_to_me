<%= stylesheet_link_tag 'registrations_edit', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class='col-sm-10 offset-sm-2 contents'>
  <h2><%= t('.edit_user') %></h2>
  <%= render 'layouts/notice' %>

  <hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <% if resource.errors.any? %>
      <div class='border rounded' id='registrations_error_area'>
          <% resource.errors.full_messages.each do |m| %>
            <li><%= m %></li>
          <% end %>
      </div>
    <% end %>

    <div class='form-group'>
      <%= f.label :'name' %>
      <%= f.text_field :name,
                       autocomplete: 'name',
                       class: 'form-control'
      %>
    </div>

    <div class='form-group'>
      <%= f.label :'email' %>
      <%= f.email_field :email,
                        autocomplete: 'email',
                        class: 'form-control'
      %>
    </div>

    <%# if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <%# <div>Currently waiting confirmation for: = resource.unconfirmed_email</div> %>
    <%# end %>

    <div class='form-group'>
      <label class='mb-2' for='user_current_password'>
        <%= t('.current_password') %><%= t('.current_password_tips') %>
      </label>
      <%= f.password_field :current_password,
                           placeholder: t('.password_placeholder',
                                          num: @minimum_password_length
                                          ),
                           autocomplete: 'current-password',
                           class: 'form-control'
      %>
    </div>

    <div class='form-group'>
      <label class='mb-2' for='password'>
        <%= t('.new_password') %><%= t('.new_password_tips') %>
      </label>
      <%= f.password_field :password,
                           autocomplete: 'new-password',
                           placeholder: t('.password_placeholder',
                                          num: @minimum_password_length
                                          ),
                           class: 'form-control'
      %>
    </div>

    <div class='form-group'>
      <%= f.password_field :password_confirmation,
                           autocomplete: 'new-password',
                           placeholder: t('.new_password_confirmation'),
                           class: 'form-control'
      %>
    </div>

    <div class='form-group'>
      <%= f.submit t('.update'), class: 'btn btn-primary btn-sm font-weight-light' %>
    </div>
  <% end %>

  <hr>

  <p class='mb-0'>
    <%= t('.sentence1') %>
    <%= link_to t('.here'),
                registration_path(resource_name),
                data: { confirm: 'Are you sure?' },
                method: :delete
    %>
    <%= t('.sentence2') %>
  </p>
</div>
