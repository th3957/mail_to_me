<%= @user.name %>'s page<br>
Number of travels: <%= @user.travels.count %><br>
Number of cards: <%= Card.where(travel_id: @user.travels.ids).count %><br>

<% Card.where(travel_id: @user.travels.ids).includes(:images).each do |c| %>
  <% if c.images.present? %>
    <%= link_to image_tag(c.images.first.data.thumb.url), c %><br>
  <% else %>
    <%= link_to image_tag('blank.png'), c %><br>
  <% end %>
  <%= c.title %><br>
<% end %>

<%= render 'layouts/users_footer' %>
