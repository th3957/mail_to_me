<%= stylesheet_link_tag 'personal', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class='col-sm-10 offset-sm-2 contents'>
  <div class='row'>
    <div class='col-12'>
      <h2>HOME</h2>
      <div class='btn btn-primary btn-sm font-weight-light'>
        BOOKLETS <span class='badge badge-light'><%= @user.travels.count %></span>
      </div>
      <div class='btn btn-primary btn-sm font-weight-light'>
        CARDS <span class='badge badge-light'><%= @cards_count %></span>
      </div>
    </div>
  </div>

  <hr class='mb-0'>

  <div class='row'>
    <% @cards.includes(:images).each do |c| %>
      <div class='col-sm-3 card_index'>
        <div class='card'>
          <% if c.images.present? %>
            <%= link_to image_tag(c.images.first.data.thumb.url, class: 'card-img-top'), c %>
          <% else %>
            <%= link_to image_tag('blank.png', class: 'card-img-top'), c %>
          <% end %>
          <div class='card-body'>
            <div class='card-title'><%= c.title %></div>
            <div class='card-text'>
              <small>
                updated at <%= I18n.l(c.updated_at, format: :custom) %>
              </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <hr class='mt-0'>

  <%= paginate @cards %>
</div>
