<%= stylesheet_link_tag 'travels', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class='col-sm-10 offset-sm-2 contents'>
  <h2>CARD CONFIG</h2>
  <%= render 'layouts/notice' %>

  <hr>

  <p class='text-justify'><%= @card.sentence %></p>
  <% @card.images.each do |i| %>
    <%= image_tag(i.data.thumb.url, class: 'img-thumbnail mb-3') if i.present? %>
  <% end %>

  <hr>

  <%= link_to 'EDIT CARD', edit_card_path(@card), class: 'btn btn-primary btn-sm font-weight-light' %>
  <%= link_to 'SHOW PDF', card_path(@card, format: 'pdf'), class: 'btn btn-primary btn-sm font-weight-light show_pdf' %>
  <%= link_to 'DOWNLOAD', download_card_path(@card), class: 'btn btn-primary btn-sm font-weight-light' %>
</div>
