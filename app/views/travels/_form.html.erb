<% if @travel.errors.any? %>
  Creation failed due to <%= pluralize(@travel.errors.count, "error") %>.<br>
  <% @travel.errors.full_messages.each do |m| %>
    <li><%= m %></li>
  <% end %>
<% end %>

<%= form_with(model: travel, local: true) do |f| %>
  <%= f.label :"title" %><%= f.text_field :title %><br>
  <%= f.label :"departure date" %><%= f.datetime_select :departured_at %><br>
  <%= f.label :"return date" %><%= f.datetime_select :returend_at %><br>
  <%= f.label :"image" %><%= f.file_field :travel_image %><br>

  <%= f.fields_for :areas do |a| %>
    area information<%= a.index + 1 %><br>
    <%= a.label :"country" %><%= a.text_field :country %><br>
    <%= a.label :"place" %><%= a.text_field :place %><br>
  <% end %>

  <% if action_name == 'edit' %>
    <%= f.submit "UPDATE" %>
    <%= link_to "DELETE", travel_path(@travel), data: { confirm: "Are you sure?" }, method: :delete %>
  <% else %>
    <%= f.submit "CREATE" %>
  <% end %>
<% end %>
