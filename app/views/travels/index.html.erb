<%= stylesheet_link_tag 'travels', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class='col-sm-10 offset-sm-2 contents'>
  <h2>Travel index</h2>
  <%= render 'layouts/notice' %>
  <p class='mb-0'>latest travel : <%= @latest_travel.title %></p>

  <hr class='mb-0'>

  <div class='row'>
    <% @travels.each do |t| %>
      <div class='col-sm-3 travel_index'>
        <div class='card'>
          <% if t.travel_image.url.nil? %>
            <%= link_to image_tag('blank.png', class: 'card-img-top'), t %>
          <% else %>
            <%= link_to image_tag(t.travel_image.thumb.url, class: 'card-img-top'), t %>
          <% end %>
          <div class='card-body'>
            <div class='card-title'><%= t.title %></div>
            <div class='card-text'>
              <small>
                <%= t.departed_at %> ~ <%= t.returned_at %>
              </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <hr class='mt-0'>

  <%= paginate @travels %>
</div>
