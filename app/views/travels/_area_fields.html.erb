<div class='nested-fields'>
  <div class='form-group'>
    <%= f.text_field :country,
                     placeholder: t('.country'),
                     class: 'form-control'
    %>
  </div>

  <div class='form-group'>
    <%= f.text_field :place,
                     placeholder: t('.place'),
                     class: 'form-control'
    %>
  </div>

  <div class='mb-2'>
    <label class='mb-2' for='arrived_at'><%= t('.arrived_at') %></label>
    <%= f.date_select :arrived_at %>

    <label class='mb-2' for='left_at'><%= t('.left_at') %></label>
    <%= f.date_select :left_at %>
  </div>

  <%= link_to_remove_association t('.delete_area'), f, class: 'btn btn-secondary btn-sm font-weight-light' %>
</div>
