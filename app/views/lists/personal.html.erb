<%= stylesheet_link_tag 'personal', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class='col-sm-10 offset-sm-2 contents'>
  <h2>ALL LISTS</h2>

  <hr>

  <% @lists.includes(:travel).each do |l| %>
    <li class='mb-2'>
      <%= link_to l.title, l, class: 'lists_title' %> has <%= l.items.count %> items, on <%= l.travel.title %>
    </li>
  <% end %>

  <hr>

  <%= paginate @lists %>
</div>
