<%= stylesheet_link_tag 'travels', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class='col-sm-10 offset-sm-2 contents'>
  <p><strong><%= @list.title %></strong>(<%= @associated_travel.title %>)</p>
  <%= render 'layouts/notice' %>

  <div class='col-12 table-responsive pr-0 pl-0'>
    <table class='table table-sm table-bordered table-hover text-nowrap'>
      <tbody>
        <thead class='thead-light'>
          <th><%= t('.item_name') %></th>
          <th><%= t('.remark') %></th>
        </thead>
        <% @list.items.each do |i| %>
          <tr>
            <td><%= i.name %></td>
            <td><%= i.remark %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to t('.edit_list'), edit_list_path(@list), class: 'btn btn-primary btn-sm' %>

  <div class="btn-group">
    <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= t('.duplicate_list') %>
    </button>
    <div class="dropdown-menu">
      <% @travels.each do |t| %>
        <div class="dropdown-item" href="#">
          <%= link_to t.title, duplicate_list_path(@list, travel_id: t.id) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
