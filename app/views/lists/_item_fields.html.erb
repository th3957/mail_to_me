<div class='nested-fields'>
  <div class='form-group'>
    <%= f.text_field :name,
                     placeholder: t('.item_name'),
                     class: 'form-control'
    %>
  </div>

  <div class='form-group'>
    <%= f.text_area :remark,
                     placeholder: t('.remark'),
                     class: 'form-control'
    %>
  </div>

  <%= link_to_remove_association t('.delete_item'), f, class: 'btn btn-secondary btn-sm font-weight-light' %>
</div>
